# MQTT Configuration - Development Environment
MQTT_ENABLE=true

# MQTT Broker Configuration (Development - Local Mosquitto)
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=Backend_Client_Develpment
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_USE_TLS=false

# Sensor Data Configuration
SENSOR_DATA_SAVE_INTERVAL=60
SENSOR_DATA_MIN_INTERVAL=60

# Database Seeding Configuration
ENABLE_SEED_DATA=true
ENABLE_SEED_CLEANUP=false
ENABLE_SEED_VALIDATION=true

# JWT Configuration
JWT_SECRET_KEY=DevelopmentModeSecretKeyThatIsSecureForDevelopmentPurposesOnly!
JWT_ISSUER=NewContainment-Development
JWT_AUDIENCE=NewContainmentDevUsers

# Database Connection
ConnectionStrings__DefaultConnection=Data Source=app.db

# Application URLs
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000;https://+:5001

# WhatsApp Qontak API Configuration
WHATSAPP_QONTAK_BEARER_TOKEN=development_token
WHATSAPP_QONTAK_DEFAULT_TEMPLATE_ID=300d84f2-d962-4451-bc27-870fb99d18e7
WHATSAPP_QONTAK_CHANNEL_INTEGRATION_ID=662f9fcb-7e2b-4c1a-8eda-9aeb4a388004
WHATSAPP_QONTAK_MAINTENANCE_TEMPLATE_ID=300d84f2-d962-4451-bc27-870fb99d18e7
WHATSAPP_QONTAK_REMINDER_TEMPLATE_ID=300d84f2-d962-4451-bc27-870fb99d18e7

# WhatsApp Settings
WHATSAPP_ENABLE_NOTIFICATIONS=false
WHATSAPP_REMINDER_DAYS_BEFORE=3
WHATSAPP_REMINDER_TIME_HOUR=8

# Development Settings
ENABLE_DEVICE_ACTIVITY_MONITORING=true
DEVICE_ACTIVITY_INTERVAL_MINUTES=5

ENABLE_SYSTEM_MANAGEMENT=true
SYSTEM_HEALTH_CHECK_INTERVAL=30

SENSOR_DATA_PROCESSING_ENABLED=true
SENSOR_DATA_BATCH_SIZE=100

MAINTENANCE_NOTIFICATION_ENABLED=false
MAINTENANCE_REMINDER_HOURS=24
