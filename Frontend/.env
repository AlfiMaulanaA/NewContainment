# Application Information
NEXT_PUBLIC_APP_NAME="IOT Containment System - Dev"
NEXT_PUBLIC_APP_DESC="IOT Containment Dashboard (Development)"
NEXT_PUBLIC_APP_VERSION="1.0.0-dev"
NEXT_PUBLIC_APP_AVATAR_URL="/images/avatar-user.png"

# API Configuration (Development - local development)
NEXT_PUBLIC_API_BASE_URL="http://localhost:5000"

# MQTT Configuration (Development - local Mosquitto)
NEXT_PUBLIC_MQTT_HOST="localhost"
NEXT_PUBLIC_MQTT_PORT="9001"
NEXT_PUBLIC_MQTT_USE_WEBSOCKET="true"
NEXT_PUBLIC_MQTT_USERNAME=""
NEXT_PUBLIC_MQTT_PASSWORD=""
NEXT_PUBLIC_MQTT_CLIENT_ID="Containment_Frontend_Dev"
NEXT_PUBLIC_MQTT_TOPIC_PREFIX="containment"
NEXT_PUBLIC_MQTT_ENABLED="true"

# System Settings
NEXT_PUBLIC_SINGLE_CONTAINMENT_MODE=false
NODE_ENV="development"

# Development Settings
NEXT_PUBLIC_ALLOW_DATA_CLEANUP="true"
NEXT_PUBLIC_DEBUG_MODE="true"
NEXT_PUBLIC_ENABLE_DEV_TOOLS="true"
