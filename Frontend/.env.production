# =============================================================================
# IOT Containment Monitoring System - Production Environment Configuration
# =============================================================================

# Application Information
NEXT_PUBLIC_APP_NAME="IOT Containment System"
NEXT_PUBLIC_APP_DESC="IOT Containment Dashboard"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_AVATAR_URL="/images/avatar-user.png"

# API Configuration - Production
# Use current server's hostname/IP for API calls
NEXT_PUBLIC_API_BASE_URL=""  # Empty = use same origin (port 80 via Nginx)

# MQTT Configuration - Production
# Use dynamic hostname detection
NEXT_PUBLIC_MQTT_HOST="192.168.0.151"     # Empty = use current hostname
NEXT_PUBLIC_MQTT_PORT="9000"

# Connection Settings
NEXT_PUBLIC_MQTT_USE_WEBSOCKET="true"
NEXT_PUBLIC_MQTT_USERNAME=""
NEXT_PUBLIC_MQTT_PASSWORD=""
NEXT_PUBLIC_MQTT_CLIENT_ID="containment_web_prod"
NEXT_PUBLIC_MQTT_TOPIC_PREFIX=""
NEXT_PUBLIC_MQTT_ENABLED="true"

# System Settings
NEXT_PUBLIC_SINGLE_CONTAINMENT_MODE=true
NODE_ENV="production"

# =============================================================================
# Production Notes:
#
# API_BASE_URL: Empty string uses same origin (Nginx reverse proxy)
# MQTT_HOST: Empty string uses window.location.hostname in production
# 
# This configuration allows the system to work on any production server
# without hardcoding IP addresses.
# =============================================================================